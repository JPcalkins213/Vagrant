<form action="/forms/" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="name">Your Name: </label>
    <input type="text" name="forms[name]" id="name"><br>
    <label for="location">School Location: </label>
    <select name="forms[location]" id="location">
        <option value="dallas">Dallas</option>
        <option value="seattle">Seattle</option>
        <option value="silicon">Silicon Valley</option>
        <option value="NY">New York</option>
    </select><br>
    <label for="language">Favorite Language: </label>
    <select name="forms[language]" id="language">
        <option value="javascript">Javascript</option>
        <option value="html">HTML</option>
        <option value="css">CSS</option>
        <option value="python">Python</option>
        <option value="ruby">Ruby</option>
        <option value="java">Java (you might be a lil psycho)</option>
        <option value="mern">Mern</option>
        <option value="swift">Swift</option>
    </select><br>
    <label for="comment">Comment (optional): </label>
    <input type="textarea" name="forms[comment]"><br>
    <input type="submit">
</form>